BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '5'
            font_size: 60
            on_text: app.handle_convert_miles()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
      text: 'Convert Miles to km'
       on_press: app.get_miles()
    Label:
        id: output_label
        font_size: 60
        text: '0.0'
        color: (1, 1, 0, 1)









